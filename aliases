# Alternatives to nvim
alias v="nvim"
alias neovim="nvim"

# Git composed aliases
alias pull="git fetch && git pull"
alias push="git push || fuck"

# Environment
alias spark="cd ~/.spark"
alias C="cd ~/Code"

# Work Projects
LIVEOPS="~/Code/live-ops"
PACKAGES="$LIVEOPS/portal-app-ui/packages"

alias lo="cd $LIVEOPS"
alias po="cd $LIVEOPS/portal-app-ui"
alias pro="cd $PACKAGES/provider"
alias ui="cd $PACKAGES/app-ui"
alias sdk="cd $PACKAGES/sdk"
alias down="cd $LIVEOPS && docker-compose down"
alias up="cd $LIVEOPS && docker-compose -f docker-compose-ui.yml up -d"
