# Alternatives to nvim
alias v="nvim"
alias neovim="nvim"

# Tmux
alias t="tmux"
alias tl="tmux list-sessions"
alias tw="tmux attach -t work || tmux new -s work"
alias tn="tmux new -s"
alias ta="tmux attach -t"
alias ts="tmux switch -t"
alias tk="tmux kill-session -t"

# Use fnm instead of nvm
alias nvm="fnm"

# Git composed aliases
alias pull="git fetch && git pull"
alias push="git push"
alias main="git checkout main && git pull && fnm use"
alias v2="git checkout v2.x && git pull && fnm use"
alias v3="git checkout v3.x && git pull && fnm use"
alias phoenix="fnm use && rm -rf package-lock.json node_modules && npm install"


# Environment
alias spark="cd ~/.spark"
alias C="cd ~/Code"

# Work Projects
CBUILDER="~/Code/stereotype-manager-ui"
AMANAGER="~/Code/gom-composer-ui"
FLIFECYCLE="~/Code/feature-lifecycle-fe"
GPLUGIN="~/Code/gamepluginfe"

alias p="cd $CBUILDER"
alias gom="cd $AMANAGER"
alias fl="cd $FLIFECYCLE"
alias gp="cd $GPLUGIN"
